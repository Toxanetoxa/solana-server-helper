{
	"name": "solana-fee-server",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"dev": "tsx watch src/main.ts",
		"start": "node dist/main.js",
		"build": "tsc -p tsconfig.json",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"prepare": "husky"
	},
	"dependencies": {
		"@solana/web3.js": "^1.95.1",
		"dotenv": "^16.4.5",
		"redis": "^5.8.1",
		"ws": "^8.18.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@stylistic/eslint-plugin": "^5.2.3",
		"@types/node": "^24.3.0",
		"@types/ws": "^8.5.10",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"eslint": "^9.9.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-typescript": "^4.4.4",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.2",
		"msw": "^2.4.10",
		"prettier": "^3.6.2",
		"tsx": "^4.15.7",
		"typescript": "^5.5.4",
		"typescript-eslint": "^8.39.1",
		"vitest": "^1.6.0"
	},
	"engines": {
		"node": ">=21.0.0"
	},
	"lint-staged": {
		"**/*.{ts,tsx,js,mjs,cjs}": [
			"pnpm exec prettier --write",
			"pnpm exec eslint --max-warnings=0 --fix"
		],
		"**/*.{json,md,yaml,yml}": [
			"pnpm exec prettier --write"
		]
	}
}
